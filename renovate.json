{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "github>muhlba91/renovate-config",
        "github>muhlba91/renovate-config:automerge(patch)",
        "github>muhlba91/renovate-config:automerge(minor)"
    ],
    "packageRules": [
        {
            "matchPackageNames": [
                "k0sproject/k0s"
            ],
            "automerge": false
        }
    ],
    "enabledManagers": [
        "github-actions",
        "pre-commit",
        "npm",
        "custom.regex"
    ],
    "customManagers": [
        {
            "customType": "regex",
            "managerFilePatterns": [
                "/(^|/)k0sctl\\.yml\\.j2$/"
            ],
            "matchStrings": [
                "\\s+version:\\s+(?<currentValue>\\S+)"
            ],
            "depNameTemplate": "k0sproject/k0s",
            "versioningTemplate": "semver-coerced",
            "datasourceTemplate": "github-releases"
        }
    ]
}